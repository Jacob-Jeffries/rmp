<section class="d-flex flex-wrap justify-content-around">
    <img src="{{filename}}" alt="random cute pet" id="ratingImage" class="m-3">
    <div class="align-self-center m-3" >
        <div class="rateName">
            <h2 class="text-center">{{pet_name}}</h2>
            <h6><strong>Special Skill:</strong>  {{special_skills}}</h6>
            <h6><strong>Favorite Toy:</strong> {{favorite_toy}}</h6>
        </div>
        <div class="ratePetForm">
            <form action="/api/ratings/" method="POST">
                <div class="form-group">
                    <label for="rank">🐎😻 Pet Rating 🐶🐹</label>
                    <select name="rank" id="rank" class="form-control text-center">
                        <option value="1">💗</option>
                        <option value="2">💗💗</option>
                        <option value="3">💗💗💗</option>
                        <option value="4">💗💗💗💗</option>
                        <option value="5">💗💗💗💗💗</option>
                    </select>
                    <input type="submit" class="btn btn-primary ratebtn" value="Love this Pet!">       
                </div>
            </form>
        </div>
    </div>
</section>