<section class="d-flex flex-wrap justify-content-around">
    <img src="{{filename}}" alt="random cute pet" id="ratingImage" class="m-3">
    <div class="align-self-center m-3" >
        <div class="rateName">
            <h3 class="text-center">{{pet_name}}</h3>
            <p>{{special_skills}}</p>
            <p>{{favorite_toy}}</p>
        </div>
        <div class="ratePetForm">
            <form action="https://murmuring-garden-13240.herokuapp.com/api/ratings/" method="POST">
                <div class="form-group">
                    <label for="rank">🐎😻 Pet Rating 🐶🐹</label>
                    <select name="rank" id="rank" class="form-control text-center">
                        <option value="1">💗</option>
                        <option value="2">💗💗</option>
                        <option value="3">💗💗💗</option>
                        <option value="4">💗💗💗💗</option>
                        <option value="5">💗💗💗💗💗</option>
                    </select>
                    <input type="submit" class="btn btn-primary" value="Love this Pet!">       
                </div>
            </form>
        </div>
    </div>
</section>